# Copy to .env and fill as needed (no real secrets committed)
# Google OAuth client JSON path (download from Google Cloud Console)
GOOGLE_OAUTH_CLIENT_JSON=./.secrets/google_client.json
# Where to store the local OAuth token after first sign-in
GOOGLE_OAUTH_TOKEN_JSON=./.secrets/google_token.json

# Comma-separated list of Google Sheets URLs to extract from
GOOGLE_SHEETS_URLS=
# Optional YAML config listing multiple Google Sheets URLs
SHEETS_CONFIG=./config/sheets.yaml

# Where to write extracted links (JSONL)
OUTPUT_JSONL=./storage/linkedin_links.jsonl

# Month filter for selecting tab by name (case-insensitive substring)
MONTH_FILTER=aug

# CSV output path (optional). If empty, a timestamped path under ./storage/ingest/google_sheets will be used.
OUTPUT_CSV=

# Optional fixed port for local OAuth redirect. If using a Web OAuth client, add
# http://localhost:8765/ to Authorized redirect URIs (or change the port here and in Google Cloud).
GOOGLE_OAUTH_REDIRECT_PORT=8765

# Posts scraper (local only; do not commit real secrets)
POSTS_SCRAPER_CONCURRENCY=1
POSTS_SCRAPER_RATE_QPS=0.2
POSTS_SCRAPER_OUT_DIR=./storage/scrape
POSTS_OUTPUT_CSV=./storage/outputs/linkedin_posts/posts.csv
# Optional: absolute path to a local Playwright user-data-dir containing a logged-in session
POSTS_SESSION_DIR=
# Optional: login via env (prefer using POSTS_SESSION_DIR). Do not commit real values here.
LI_EMAIL=
LI_PASSWORD=
